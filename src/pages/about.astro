---
import PageLayout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";
import { awardsTech } from "@/data/awards";
---

<PageLayout meta={{ title: "About Aaron Jarmusch" }}>
	<section>		
		<div class="space-y-8">
			<!-- Education -->
			<div>
				<h2 class="text-xl font-semibold mb-4">Education</h2>
				<div class="space-y-4">
					<div class="border-l-4 border-blue-500 pl-4">
						<h3 class="font-semibold">Ph.D. in Computer Science</h3>
						<p class="text-sm text-gray-600">University of Delaware</p>
						<p class="text-sm">Advisor: Dr. Sunita Chandrasekaran</p>
						<p class="text-sm">Focus: High Performance Computing, Compiler Validation, GPU Programming</p>
					</div>
					<div class="border-l-4 border-green-500 pl-4">
						<h3 class="font-semibold">Bachelor of Science in Electrical Engineering</h3>
						<p class="text-sm text-gray-600">University of Delaware</p>
					</div>
				</div>
			</div>

			<!-- Honors and Awards -->
			<div>
				<h2 class="text-xl font-semibold mb-4">Honors & Awards</h2>
				<div class="space-y-4">
					{
						awardsTech.map((award, index) => {
							const colors = ['yellow', 'blue', 'green', 'purple', 'red'];
							const color = colors[index % colors.length];
							return (
								<div class={`border-l-4 border-${color}-500 pl-4`}>
									<h3 class="font-bold text-lg">
										<a href={award.href} class="cactus-link" target="_blank">
											{award.title}
										</a>
									</h3>
									<p class="text-sm text-gray-500 mt-1">{award.desc}</p>
								</div>
							);
						})
					}
				</div>
			</div>

			<!-- Research Experience -->
			<div>
				<h2 class="text-xl font-semibold mb-4">Experience</h2>
				<div class="space-y-6">
					<div class="border-l-4 border-purple-500 pl-4">
						<h3 class="font-semibold">Graduate Research Assistant</h3>
						<p class="text-sm text-gray-600">Computational Research Programming Lab (CRPL), University of Delaware</p>
						<ul class="text-sm mt-2 space-y-1">
							<li>• Leading development of OpenACC Validation and Verification testsuite</li>
							<li>• Contributing to S4PST (Stewardship for Programming Systems and Tools) project</li>
							<li>• Developing CI/CD pipelines for LLVM-based compiler testing</li>
							<li>• Benchmarking GPU performance across NVIDIA H100, GH200, and AMD MI300A architectures</li>
						</ul>
					</div>
					<div class="border-l-4 border-orange-500 pl-4">
						<h3 class="font-semibold">Research Collaborator</h3>
						<p class="text-sm text-gray-600">OpenACC User Group</p>
						<ul class="text-sm mt-2 space-y-1">
							<li>• Contributing to OpenACC programming model standardization</li>
							<li>• Developing comprehensive test suites for compiler compliance</li>
							<li>• Ensuring cross-platform compatibility and performance</li>
						</ul>
					</div>
				</div>
			</div>

			<!-- Technical Skills -->
			<div>
				<h2 class="text-xl font-semibold mb-4">Technical Expertise</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<h3 class="font-semibold mb-2">Programming Languages</h3>
						<div class="flex flex-wrap gap-2">
							<span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">C/C++</span>
							<span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">Python</span>
							<span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">CUDA</span>
							<span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">OpenACC</span>
							<span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">OpenMP</span>
							<span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">Fortran</span>
						</div>
					</div>
					<div>
						<h3 class="font-semibold mb-2">Tools & Technologies</h3>
						<div class="flex flex-wrap gap-2">
							<span class="px-2 py-1 bg-green-100 text-green-800 rounded text-sm">LLVM</span>
							<span class="px-2 py-1 bg-green-100 text-green-800 rounded text-sm">Git/GitLab</span>
							<span class="px-2 py-1 bg-green-100 text-green-800 rounded text-sm">CI/CD</span>
							<span class="px-2 py-1 bg-green-100 text-green-800 rounded text-sm">Docker</span>
							<span class="px-2 py-1 bg-green-100 text-green-800 rounded text-sm">HPC Clusters</span>
							<span class="px-2 py-1 bg-green-100 text-green-800 rounded text-sm">GPU Computing</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Contact -->
			<div>
				<h2 class="text-xl font-semibold mb-4">Connect</h2>
				<p class="mb-4">
					I'm always interested in discussing HPC research, collaboration opportunities, 
					and advancing the field of parallel computing. Feel free to reach out!
				</p>
				<div class="flex space-x-4">
					<a
						href="mailto:ajarmusch@udel.edu"
						class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
					>
						<Icon aria-hidden="true" class="h-4 w-4 mr-2" focusable="false" name="mdi:email" />
						Email
					</a>
					<a
						href="https://www.linkedin.com/in/aaron-jarmusch/"
						target="_blank"
						class="inline-flex items-center px-4 py-2 bg-blue-800 text-white rounded hover:bg-blue-900"
					>
						<Icon aria-hidden="true" class="h-4 w-4 mr-2" focusable="false" name="mdi:linkedin" />
						LinkedIn
					</a>
					<a
						href="https://github.com/ajarmusch"
						target="_blank"
						class="inline-flex items-center px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-900"
					>
						<Icon aria-hidden="true" class="h-4 w-4 mr-2" focusable="false" name="mdi:github" />
						GitHub
					</a>
				</div>
			</div>
		</div>
	</section>
</PageLayout>
