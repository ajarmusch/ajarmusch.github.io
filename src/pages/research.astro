---
import PageLayout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";
import { researchProjects, researchAreas } from "@/data/research";
---

<PageLayout meta={{ description: "Research - Aaron Jarmusch", title: "Research" }}>
	<div class="space-y-6">
		<div class="flex flex-wrap items-center justify-between gap-2">
			<div class="flex items-center space-x-2">
				<h1 class="title">Research</h1>
			</div>
		</div>
		
    <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6">
			<p class="leading-relaxed">
				My research focuses on High Performance Computing (HPC), parallel programming models, and compiler validation. 
				I work on advancing the reliability and performance of GPU computing ecosystems through comprehensive testing 
				frameworks and innovative methodologies. My research is driven by the belief that robust, reliable software is fundamental to scientific discovery. 
				By developing comprehensive testing frameworks and validation methodologies, I aim to ensure that the tools 
				scientists rely on for breakthrough research are trustworthy and performant. The intersection of AI and 
				systems software presents unprecedented opportunities to automate and improve software quality at scale.
			</p>
		</div>
	</div>

	<section class="mt-16">
		<h2 class="title mb-6 text-xl">Research Areas</h2>
		<div class="space-y-8">
			{
				researchAreas.map((area) => (
					<div class={`border-l-4 border-${area.color}-500 pl-6`}>
						<h3 class={`font-semibold text-lg mb-3 text-${area.color}-600`}>{area.title}</h3>
						<p class="mb-4">
							{area.description}
						</p>
						<div class="text-sm text-gray-600">
							<strong>Key Technologies:</strong> {area.technologies.join(", ")}
						</div>
					</div>
				))
			}
		</div>
	</section>

	<section class="mt-16">
		<h2 class="title mb-6 text-xl">Active Projects</h2>
		<div class="space-y-10">
			{
				researchProjects.filter(project => project.id !== 'llm4vv').map((project) => (
					<div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6">
						<div class="flex items-start space-x-4">
							{project.logo && (
								<div class="flex-shrink-0">
									<img
										src={project.logo}
										alt={`${project.title} Logo`}
										class="w-20 h-12 object-contain"
									/>
								</div>
							)}
							<div class="flex-1">
								<h3 class="font-semibold text-lg mb-2">
									{project.links.length > 0 ? (
										<a
											aria-label={project.title}
											class="cactus-link"
											href={project.links[0].url}
											rel="noopener noreferrer"
											target="_blank"
										>
											{project.title}
										</a>
									) : (
										project.title
									)}
								</h3>
								<p class="mb-3">
									{project.description}
								</p>
								<div class="flex items-center flex-wrap gap-4">
									{project.links.map((link) => {
										const iconMap = {
											github: "mdi:github",
											gitlab: "mdi:gitlab", 
											website: "mdi:web",
											paper: "mdi:file-document"
										};
										const colorMap = {
											github: "bg-blue-100 text-blue-800 hover:bg-blue-200",
											gitlab: "bg-orange-100 text-orange-800 hover:bg-orange-200",
											website: "bg-green-100 text-green-800 hover:bg-green-200",
											paper: "bg-purple-100 text-purple-800 hover:bg-purple-200"
										};
										
										return (
											<a
												class={`flex items-center space-x-1 text-sm px-3 py-1 rounded ${colorMap[link.type]}`}
												href={link.url}
												target="_blank"
												rel="noopener noreferrer"
											>
												<Icon aria-hidden="true" class="h-4 w-4" focusable="false" name={iconMap[link.type]} />
												<span>{link.label}</span>
											</a>
										);
									})}
									<span class="text-sm text-gray-600">Status: {project.status}</span>
								</div>
							</div>
						</div>
					</div>
				))
			}
		</div>
	</section>
</PageLayout>
